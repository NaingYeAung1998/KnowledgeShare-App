@using Microsoft.AspNetCore.Identity
@using KSProject.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="account" asp-action="logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="/profile/notification" style="color:white;font-size:15px;"><i class="fa fa-bell"></i></a>
            </li>
            <li>
                <a style="color:white;" asp-controller="profile" asp-action="edit" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link" style="color:white;">Logout</button>
            </li>
        </ul>
    </form>

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Account/Register" style="color:white;font-size:15px;">Register</a></li>
        <li><a href="/Account/Login" style="color:white;font-size:15px;">Login</a></li>
    </ul>
}
